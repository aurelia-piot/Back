{% extends 'layout.html.twig' %}

{% block content %}
    
<h1 class="display-4">COMMANDES</h1>


    <table class="table-dark table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Montant</th>
                <th>Date</th>
                <th>Membre</th>
                <th>Etat</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for c in commandes %}
            <tr>
                <td>{{ c.idCommande }}</td>
                <td>{{c.montant| number_format(2,',',' ') }}</td>
                <td>{{c.dateEnregistrement | date("d/m/Y H:i:s") }}</td>
                <td>{{ c.membreId.prenom}} {{ c.membreId.nom}} {{ c.membreId.id}} <br/>
                    {{ c.membreId.adresse}} <br/>
                    {{ c.membreId.codePostal}} {{ c.membreId.ville}}

                </td>
                <td>
                    {% if c.etat == 0 %}<strong style="color:red">En cours de traitement</strong>
                    {% elseif c.etat == 1 %}<strong style="color:orange">En cours de traitement</strong>
                    {% elseif c.etat == 2 %}<strong style="color:lightgreen">Livr√©e</strong>
                    {% else %} <strong>Autre</strong>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>



{% endblock %}