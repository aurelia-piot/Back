{% extends 'layout.html.twig' %}

{% block title %}
    Boutique - accueil
{% endblock %}


{% block content %}
    
        {# {{ dump(produits) }} #}
		{# {{dump(categories)}} #}

<div class="row col-12 p-5">



<!--  Menu des catégorie -->
	<div class="col-lg-3">
		<div class="list-group mb-4">
			<a href="{{path('homepage')}}" class="list-group-item text-light bg-dark">Tous les produits</a>
			{% for cat in categories %}
			<!-- BOuCLE foreache $produits as pdt -->
				<a href="{{path('categorie',{'cat':cat.categorie})}}"class="list-group-item text-dark">{{ cat.categorie}} </a>
			{% endfor %}
		</div>
	</div>


	<!-- Espace principal  -->
	<div class="col-lg-9">
		<div class="row">

             {% for pdt in produits %}<!-- debut de notre boucle for-->

			<!-- Debut Vignette Produit -->
			<div class="col-lg-4 col-md-6 mb-4">
				<div class="card h-100">




					<a href="{{path ('produit',{'id':pdt.id} ) }}"><img class="card-img-top" src="{{ asset('photo/' ~ pdt.photo )}}" alt=""></a>






					<div class="card-body">
                        <h4 class="card-title text-center">
                            <a href="" class="alert-link text-dark">{{ pdt.titre }}</a>
                        </h4>
                        <h5 class="text-center">{{ pdt.prix }} €</h5>
                        <p class="card-text text-center">{{ pdt.description }}</p>
					</div>
					<div class="card-footer text-center">
					    <a href="" class="alert-link text-dark">Voir le détail&nbsp;&nbsp;<i class="fas fa-search"></i></a>
					</div>
				</div>
			</div>
			<!-- Fin Vignette Produit -->
		{% endfor %}<!-- fin de notre boucle for-->
		</div>
	</div>
	
</div>

{% endblock %}